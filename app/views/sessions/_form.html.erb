<%= form_with(url: login_path, local: true, method: :post) do |form| %>
  <% if defined?(error) %>
    <div class="alert alert-danger col-md-6 offset-md-3 text-start" role="alert">
      <ul>
        <li><%= error %></li>
      </ul>
    </div>
  <% end %>

  <div class="form-floating mb-3 col-md-6 offset-md-3">
    <%= form.email_field :email, autofocus: true, class: 'form-control', placeholder: 'name@email.com', name: 'login[email]', required: true %>
    <%= form.label :email %>
  </div>

  <div class="form-floating mb-3 col-md-6 offset-md-3">
    <%= form.password_field :password, class: 'form-control', placeholder: 'Password' %>
    <%= form.label :password %>
  </div>

  <div class="actions col-md-6 offset-md-3">
    <%= form.submit 'Login', class: 'btn btn-outline-primary w-100' %>
  </div>
<% end %>
