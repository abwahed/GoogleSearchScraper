<% content_for :title do %>
  <title>Upload Keywords</title>
<% end %>

<div class="container-fluid">
  <div class="container my-5">
    <div class="p-5 text-center bg-body-tertiary rounded-3">
      <h1 class="text-body-emphasis">Upload CSV</h1>
      <div class="row w-100 m-auto">
        <%= form_with url: keywords_path, local: true do |form| %>
          <div class="form-group mb-3 col-md-6 offset-md-3">
            <%= form.file_field :file, name: 'keywords[file]', accept: 'text/csv', class: 'form-control' %>
          </div>

          <div class="actions col-md-6 offset-md-3">
            <%= form.submit 'Upload', class: 'btn btn-outline-success w-100' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
